@page "/MeterReading"

<PageTitle>Meter Reading</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Meter Reading</h1>
    <span class="text-muted">@CurrentDateTime</span>
</div>

<hr/>

<div class="container">
    <div class="mb-3">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Please Input Meter Number ...">
            <button class="btn btn-primary" type="button">
                Search
            </button>
        </div>
    </div>
    <div class="row g-2 mb-3">
        <div class="col">
            <label for="input1" class="form-label">First Name</label>
            <input type="text" id="input1" class="form-control" readonly>
        </div>
        <div class="col">
            <div class="col">
                <label for="input1" class="form-label">Middle Name</label>
                <input type="text" id="input1" class="form-control" readonly>
            </div>
        </div>
        <div class="col">
            <label for="input1" class="form-label">Last Name</label>
            <input type="text" id="input1" class="form-control" readonly>
        </div>
    </div>
    <div class="row g-2 mb-3">
        <div class="col">
            <label for="input1" class="form-label">Previous Reading</label>
            <input type="text" id="input1" class="form-control" readonly>
        </div>
        <div class="col">
            <div class="col">
                <label for="input1" class="form-label">Current Reading</label>
                <input type="text" id="input1" class="form-control" placeholder="Please Input Current Reading">
            </div>
        </div>
        <div class="col">
            <label for="input1" class="form-label">Usage</label>
            <input type="text" id="input1" class="form-control" readonly>
        </div>
    </div>
    <div class="row g-2 mb-3">
        <div class="col">
            <label for="input1" class="form-label">Period</label>
            <select class="form-control">
                <option value="N/A" selected disabled>- Please select period -</option>
                <option value="January">January</option>
                <option value="February">February</option>
                <option value="March">March</option>
                <option value="April">April</option>
                <option value="May">May</option>
                <option value="June">June</option>
                <option value="July">July</option>
                <option value="August">August</option>
                <option value="September">September</option>
                <option value="October">October</option>
                <option value="November">November</option>
                <option value="December">December</option>
            </select>
        </div>
        <div class="col">
            <div class="col">
                <label for="input1" class="form-label">Date Due</label>
                <input type="text" id="input1" class="form-control" readonly>
            </div>
        </div>
        <div class="col">
            <label for="input1" class="form-label">Reading Date</label>
            <input type="text" id="input1" class="form-control" readonly value="@CurrentDateTime">
        </div>
    </div>
    <div class="d-flex justify-content-end mt-3">
        <button type="button" class="btn btn-secondary me-2">Reset</button>
        <button type="button" class="btn btn-primary">Release</button>
    </div>
</div>


@code {

    private string CurrentDateTime { get; set; }

    protected override void OnInitialized()
    {
        CurrentDateTime = DateTime.Now.ToString("MMMM dd, yyyy hh:mm:ss tt");

        var timer = new System.Threading.Timer((e) =>
        {
            InvokeAsync(() =>
            {
                CurrentDateTime = DateTime.Now.ToString("MMMM dd, yyyy hh:mm:ss tt");
                StateHasChanged();
            });
        }, null, 0, 1000);
    }
}