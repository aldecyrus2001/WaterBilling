@page "/Index_Billing"

<div class="d-flex justify-content-between align-items-center mb-3">
	<h2>Billing Records</h2>
	<form method="post" class="d-flex" style="width: 300px;">
		<input style="max-width: 100%;" type="text" class="form-control me-2" placeholder="Search..."/>
	</form>
</div>

<table class="table">
    <thead>
		<tr>
			<th>Meter ID</th>
			<th>Name</th>
			<th>Address</th>
			<th>Period</th>
			<th>Reading Date</th>
			<th class="text-center">Action</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>1</td>
			<td>Sample Joe</td>
			<td>Sample@gmail.com</td>
			<td>February</td>
			<td>2024-12-16</td>
			<td class="text-end" style="vertical-align: middle;">
				<div class="d-flex justify-content-center">
					<a href="/Billing" class="btn btn-success btn-sm" type="button">Pay</a>
				</div>
			</td>
		</tr>
	</tbody>
</table>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" style="width: 750px; max-width: 100%;">
		<div class="modal-content">
			<div class="modal-header">
				
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="row g-2 mb-2">
					<div class="col">
						<label for="input1" class="form-label">First Name</label>
						<input type="text" id="input1" class="form-control" readonly>
					</div>
					<div class="col">
						<label for="input1" class="form-label">Middle Name</label>
						<input type="text" id="input1" class="form-control" readonly>
					</div>
					<div class="col">
						<label for="input1" class="form-label">Last Name</label>
						<input type="text" id="input1" class="form-control" readonly>
					</div>
				</div>
				<div class="row g-2 mb-2">
					<div class="col">
						<label for="input1" class="form-label">Address</label>
						<input type="text" id="input1" class="form-control" readonly>
					</div>
					<div class="col">
						<label for="input1" class="form-label">Contact Number</label>
						<input type="text" id="input1" class="form-control" readonly>
					</div>
					<div class="col">
						<label for="input1" class="form-label">Date Installation</label>
						<input type="text" id="input1" class="form-control" readonly>
					</div>
				</div>
				<hr />
				<div class="row g-2 mb-2">
					<p>12345 - 1234 - 12345</p>
					<div class="col">
						<label for="input1" class="form-label">Previous Reading</label>
						<input type="text" id="input1" class="form-control" readonly>
					</div>
					<div class="col">
						<label for="input1" class="form-label">Current Reading</label>
						<input type="text" id="input1" class="form-control" readonly>
					</div>
					<div class="col">
						<label for="input1" class="form-label">Usage</label>
						<input type="text" id="input1" class="form-control" readonly>
					</div>
				</div>
				<div class="row g-2 mb-2">
					<div class="col">
						<label for="input1" class="form-label">Bill Amount</label>
						<input type="text" id="input1" class="form-control" readonly>
					</div>
					<div class="col">
						<label for="input1" class="form-label">Penalty</label>
						<input type="number" id="input1" class="form-control">
					</div>
					<div class="col">
						<label for="input1" class="form-label">Total</label>
						<input type="text" id="input1" class="form-control" readonly>
					</div>
				</div>
				<div class="row g-2 mb-2">
					<div class="col">
						<label for="input1" class="form-label">Received Money</label>
						<input type="number" id="input1" class="form-control">
					</div>
					<div class="col">
						<label for="input1" class="form-label">Change</label>
						<input type="text" id="input1" class="form-control" readonly>
					</div>
					<div class="col">
						<label for="input1" class="form-label">Mode of Payment</label>
						<select class="form-control">
							<option value="N/A" selected disabled>- Please select mode of payment -</option>
							<option value="Cash">Cash</option>
							<option value="Bank Transfer">Bank Transfer</option>
						</select>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
				<button type="button" class="btn btn-success">Accept</button>
			</div>
		</div>
	</div>
</div>


